public String formatName(String firstName, String lastName) {
IF((String.IsBlank(firstName) == FALSE) && 
   (String.IsBlank(lastName) == TRUE)) return firstName;
IF((String.IsBlank(firstName) == TRUE) 
   && (String.IsBlank(lastName) == FALSE)) return lastname;
IF((String.IsBlank(firstName) == TRUE) 
   && (String.IsBlank(lastName) == TRUE)) return lastname+', '+firstName;
ELSE return '';    //code here
}